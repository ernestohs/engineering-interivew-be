{
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#c1fa9c",
        "activityBar.background": "#c1fa9c",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#67a0f7",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#c1fa9c",
        "statusBar.background": "#a2f86b",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#83f63a",
        "statusBarItem.remoteBackground": "#a2f86b",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#a2f86b",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#a2f86b99",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "peacock.remoteColor": "#a2f86b",

    "files.exclude": {
      "**/.git": true,
      "**/node_modules": true,
      "**/.vscode": true,
      "**/.DS_Store": true,
      "**/package-lock.json": true,
      "**/*.js": {"when": "$(basename).ts"},
      "**/*.map": {"when": "$(basename).map"}
    },
    "files.autoSave": "onFocusChange",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[typescript]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
  }
  